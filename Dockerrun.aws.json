{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "mer-backend",
            "image": "keekenti/mer-test-be:latest",
            "hostname": "mer-backend",
            "essential": false,
	    "memory": 512
        },
        {
            "name": "mer-frontend",
            "image": "keekenti/mer-test-fe:latest",
            "essential": true,
	    "memory": 512,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["mer-backend"]
        }
    ]
}
